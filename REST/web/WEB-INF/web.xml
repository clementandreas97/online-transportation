<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>identityservice.LoginService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterService</servlet-name>
        <servlet-class>identityservice.RegisterService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutService</servlet-name>
        <servlet-class>identityservice.LogoutService</servlet-class>
    </servlet>
    <servlet>
        <description>JAX-WS endpoint</description>
        <display-name>WSServlet</display-name>
        <servlet-name>WSServlet</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>TokenValidator</servlet-name>
        <servlet-class>identityservice.TokenValidator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailService</servlet-name>
        <servlet-class>identityservice.EmailService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsernameService</servlet-name>
        <servlet-class>identityservice.UsernameService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TokenRenewer</servlet-name>
        <servlet-class>identityservice.TokenRenewer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/loginservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterService</servlet-name>
        <url-pattern>/registerservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutService</servlet-name>
        <url-pattern>/logoutservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WSServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TokenValidator</servlet-name>
        <url-pattern>/rest/validatetoken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailService</servlet-name>
        <url-pattern>/rest/emailajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsernameService</servlet-name>
        <url-pattern>/rest/usernameajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TokenRenewer</servlet-name>
        <url-pattern>/renewtoken</url-pattern>
    </servlet-mapping>
</web-app>

